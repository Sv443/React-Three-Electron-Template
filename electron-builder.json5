/**
 * @see https://www.electron.build/electron-builder.interface.configuration
 */
{
  "$schema": "https://json.schemastore.org/electron-builder",
  appId: "net.sv443.react-three-electron-template",
  productName: "React, Three.js, Electron, TypeScript & Vite Template",
  copyright: "Copyright Â© YEAR, NAME",
  asar: true,
  directories: {
    output: "release/${version}",
    buildResources: "electron/resources",
  },
  files: [
    "dist-electron",
    "dist",
  ],
  win: {
    target: [
      {
        target: "nsis",
        arch: [
          "x64",
          // "arm64"
        ],
      },
    ],
    artifactName: "${productName}-${version}-Windows_Setup.${ext}",
  },
  nsis: {
    oneClick: false,
    perMachine: false,
    allowToChangeInstallationDirectory: true,
    deleteAppDataOnUninstall: true,
  },
  mac: {
    target: [
      "dmg"
    ],
    artifactName: "${productName}-${version}-MacOS_Installer.${ext}",
  },
  linux: {
    target: [
      "AppImage",
      "deb",
      "rpm",
      "snap",
      "pacman",
    ],
    artifactName: "${productName}-${version}-Linux.${ext}",
    category: "Utility",
    maintainer: "Sv443",
    vendor: "Sv443",
    icon: "electron/resources/icon.png",
  },
}
